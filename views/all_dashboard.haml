.two-col-grid
  .you
    %h1.top You
    - if your_track
      - t = your_track
      - song = t["name"]
      - artist = t['artist']
      - album = t["album"]
      - art = t["image"]
      - link = t["url"]
      %img(src = "#{art[1]}")
      %p.songinfo
        %a(href="#{link}")
          = '"' "#{song}" '" '
        = "by #{artist} from"
        %i= "#{album}"
    - else
      %p.songinfo You're offline!
  
  .friends
    %h1.top Friends
    - friends.each do |f|
      - tracks = get_recently_played(f["name"], 1)["lfm"]["recenttracks"]["track"]
      - if tracks.class == Array
        - t = tracks[1]
        - song = t["name"]
        - artist = t['artist']
        - album = t["album"]
        - art = t["image"]
        - link = t["url"]
        %img(src = "#{art[1]}")
        %p.songinfo
          = "#{f['name']}: "
          %a(href="#{link}")
            = '"' "#{song}" '" '
          = "by #{artist} from"
          %i= "#{album}"
